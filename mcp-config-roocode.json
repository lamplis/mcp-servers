{
  "mcpServers": {
    "central-memory": {
      "$comment": "Auto-start: Knowledge graph memory server",
      "command": "npx",
      "args": ["tsx", "src/memory/index.ts"],
      "cwd": "C:\\DEVHOME\\GITHUB\\mcp-servers",
      "disabled": false,
      "alwaysAllow": []
    },
    "central-filesystem": {
      "$comment": "Auto-start: Filesystem server with access to DEVHOME",
      "command": "npx",
      "args": ["tsx", "src/filesystem/index.ts", "C:\\DEVHOME"],
      "cwd": "C:\\DEVHOME\\GITHUB\\mcp-servers",
      "disabled": false,
      "alwaysAllow": []
    },
    "central-everything": {
      "$comment": "Auto-start: MCP demo/test server with all capabilities",
      "command": "npx",
      "args": ["tsx", "src/everything/index.ts", "stdio"],
      "cwd": "C:\\DEVHOME\\GITHUB\\mcp-servers",
      "disabled": false,
      "alwaysAllow": ["get-env"]
    },
    "central-sequentialthinking": {
      "$comment": "Auto-start: Sequential thinking/reasoning server",
      "command": "npx",
      "args": ["tsx", "src/sequentialthinking/index.ts"],
      "cwd": "C:\\DEVHOME\\GITHUB\\mcp-servers",
      "disabled": false,
      "alwaysAllow": []
    },
    "central-fake-qdrant": {
      "$comment": "Auto-start: Fake Qdrant vector DB with optional HTTP shim on port 6333",
      "command": "npx",
      "args": ["tsx", "src/fake-qdrant/index.ts"],
      "cwd": "C:\\DEVHOME\\GITHUB\\mcp-servers",
      "env": { "FAKE_QDRANT_ENABLED": "1", "FAKE_QDRANT_HTTP_PORT": "6333" },
      "disabled": false,
      "alwaysAllow": [
        "fake_qdrant_list_collections",
        "fake_qdrant_get_collection",
        "fake_qdrant_create_collection",
        "fake_qdrant_delete_collection",
        "fake_qdrant_upsert_points",
        "fake_qdrant_query_points",
        "fake_qdrant_compact_collection",
        "fake_qdrant_persist_indexes"
      ]
    },
    "central-docsearch": {
      "$comment": "Auto-start: Document search with local embeddings (offline-first, no API key required)",
      "command": "npx",
      "args": ["tsx", "src/docsearch/index.ts"],
      "cwd": "C:\\DEVHOME\\GITHUB\\mcp-servers",
      "env": {
        "EMBEDDINGS_PROVIDER": "local",
        "DOCSEARCH_DATA_DIR": "C:\\DEVHOME\\GITHUB\\Joomla-1.0\\.roo\\docsearch-data"
      },
      "disabled": false,
      "alwaysAllow": ["doc-search", "doc-ingest", "doc-ingest-status"]
    },
    "central-local-embeddings": {
      "$comment": "Auto-start: Local/offline text embeddings using Transformers.js (model cached in ./model-cache)",
      "command": "npx",
      "args": ["tsx", "src/local-embeddings/index.ts"],
      "cwd": "C:\\DEVHOME\\GITHUB\\mcp-servers",
      "disabled": false,
      "alwaysAllow": ["embeddings", "prefetch_model", "health"]
    }
  }
}
