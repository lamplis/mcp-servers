{
  "mcpServers": {
    "central-memory": {
      "$comment": "Knowledge graph memory server for persistent storage across sessions",
      "command": "npx",
      "args": ["tsx", "src/memory/index.ts"],
      "cwd": "<MCP_SERVERS_PATH>",
      "disabled": false,
      "alwaysAllow": []
    },
    "central-filesystem": {
      "$comment": "Filesystem server - replace <ALLOWED_PATH> with directories you want to access",
      "command": "npx",
      "args": ["tsx", "src/filesystem/index.ts", "<ALLOWED_PATH>"],
      "cwd": "<MCP_SERVERS_PATH>",
      "disabled": false,
      "alwaysAllow": []
    },
    "central-docsearch": {
      "$comment": "Document search with hybrid semantic+keyword search. Requires OPENAI_API_KEY.",
      "command": "npx",
      "args": ["tsx", "src/docsearch/index.ts"],
      "cwd": "<MCP_SERVERS_PATH>",
      "env": {
        "OPENAI_API_KEY": "<YOUR_OPENAI_API_KEY>",
        "DOCSEARCH_DATA_DIR": "<YOUR_PROJECT_PATH>\\.roo\\docsearch-data"
      },
      "disabled": false,
      "alwaysAllow": []
    },
    "central-sequentialthinking": {
      "$comment": "Sequential thinking/reasoning server for complex problem solving",
      "command": "npx",
      "args": ["tsx", "src/sequentialthinking/index.ts"],
      "cwd": "<MCP_SERVERS_PATH>",
      "disabled": false,
      "alwaysAllow": []
    },
    "central-fake-qdrant": {
      "$comment": "Local Qdrant-compatible vector database",
      "command": "npx",
      "args": ["tsx", "src/fake-qdrant/index.ts"],
      "cwd": "<MCP_SERVERS_PATH>",
      "env": {
        "FAKE_QDRANT_ENABLED": "1",
        "FAKE_QDRANT_HTTP_PORT": "6333"
      },
      "disabled": false,
      "alwaysAllow": [
        "fake_qdrant_list_collections",
        "fake_qdrant_get_collection",
        "fake_qdrant_create_collection",
        "fake_qdrant_delete_collection",
        "fake_qdrant_upsert_points",
        "fake_qdrant_query_points",
        "fake_qdrant_compact_collection",
        "fake_qdrant_persist_indexes"
      ]
    },
    "central-everything": {
      "$comment": "Demo/test server with all MCP capabilities (optional)",
      "command": "npx",
      "args": ["tsx", "src/everything/index.ts", "stdio"],
      "cwd": "<MCP_SERVERS_PATH>",
      "disabled": true,
      "alwaysAllow": []
    }
  }
}
